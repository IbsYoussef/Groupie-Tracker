# Environment
ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=groupie_user
DB_PASSWORD=groupie_password
DB_NAME=groupie_tracker
DB_SSLMODE=disable

# Server
PORT=8080
HOST=localhost

# Spotify API (Get from: https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8080/auth/spotify/callback

# OpenAI (Get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key

# JWT (Generate random string for security)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# External APIs
TICKETMASTER_API_KEY=your_ticketmaster_key

# Last FM API
LASTFM_API_KEY=your_actual_api_key_here

# Session
SESSION_SECRET=your_session_secret